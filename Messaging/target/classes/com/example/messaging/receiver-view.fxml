<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="300.0" prefWidth="350.0" fx:controller="com.example.messaging.ReceiverController" alignment="CENTER" spacing="15.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- HBox para mostrar la IP y el puerto actuales en una sola línea -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="IP Actual:"/>
        <Label fx:id="ipLabel" style="-fx-font-weight: bold;"/>

        <Label text="Puerto Actual:"/>
        <Label fx:id="portLabel" style="-fx-font-weight: bold;"/>
    </HBox>

    <!-- Área de texto para mostrar los mensajes recibidos -->
    <TextArea fx:id="messageArea" prefHeight="200.0" prefWidth="300.0" editable="false"/>
</VBox>