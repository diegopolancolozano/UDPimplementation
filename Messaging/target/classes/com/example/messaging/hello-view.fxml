<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.messaging.HelloController" style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <!-- Label de bienvenida -->
    <Label fx:id="welcomeText" text="Select a function" textFill="#2c3e50">
        <font>
            <Font name="Arial Bold" size="24"/>
        </font>
    </Label>

    <!-- Botón de enviar -->
    <Button text="Send" onAction="#onSendButtonClick" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px;">
        <effect>
            <DropShadow radius="5.0" color="#2c3e50"/>
        </effect>
    </Button>

    <!-- Botón de recibir -->
    <Button text="Receive" onAction="#onReceiveButtonClick" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px;">
        <effect>
            <DropShadow radius="5.0" color="#2c3e50"/>
        </effect>
    </Button>
</VBox>