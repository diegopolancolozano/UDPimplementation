<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="250.0" prefWidth="350.0" fx:controller="com.example.messaging.SenderController" alignment="CENTER" spacing="15.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- HBox para mostrar la IP y el puerto actuales -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="IP Actual:"/>
        <Label fx:id="ipLabel" style="-fx-font-weight: bold;"/>

        <Label text="Puerto Actual:"/>
        <Label fx:id="portLabel" style="-fx-font-weight: bold;"/>
    </HBox>

    <!-- Campo para ingresar la IP -->
    <TextField fx:id="ipTextField" promptText="Enter IP Address" style="-fx-pref-width: 200;"/>

    <!-- Campo para ingresar el puerto -->
    <TextField fx:id="portArea" promptText="Enter the port here" style="-fx-pref-width: 200;"/>

    <!-- Campo para ingresar el mensaje -->
    <TextField fx:id="messageTextField" promptText="Enter your message here" style="-fx-pref-width: 200; -fx-pref-height: 60;"/> <!-- Altura incrementada -->

    <!-- BotÃ³n para enviar el mensaje -->
    <Button text="Send Message" onAction="#onSendButtonClick" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
</VBox>